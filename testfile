#probandofile
def collatz(number):
    if number % 2 == 0:
        number = number/2
    else:
        number = (number*3)+1
    return number

choosedInt = ''
while not choosedInt:
    inputString = input('type a integer positive number:')
    choosedInt = int(inputString)
while choosedInt > 1:
    choosedInt = collatz(choosedInt)
    print ('str(choosedInt)', end=', ')
